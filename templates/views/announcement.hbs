<div class="container">
  <h2>Announcements</h2>

  <div class="list-group">
    {{#each announcements}}
      <a href="#" class="list-group-item">
        <h4 class="list-group-item-heading">{{ title }}</h4>
        <p class="list-group-item-text">{{ description }}</p>
        <p>{{ date }}</p>
      </a>
    {{/each}}
  </div>
</div>
